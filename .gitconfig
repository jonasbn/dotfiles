[core]
    excludesfile = ~/.gitignore_global
[include]
    path = ~/.gitconfig.local
# Work
[includeIf "gitdir:~/develop/gitlab-dkhm/"]
    path = .gitconfig-dkhm
# DK Hostmaster organisation: https://github.com/DK-Hostmaster
[includeIf "gitdir:~/develop/github-dkhm/"]
    path = .gitconfig-dkhm
[push]
    default = simple
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[alias]
    # REF: https://coderwall.com/p/8rtfgg/git-alias-to-show-affected-files-in-last-n-commits
    lsch = "!f() { git diff --name-status -r "HEAD~$1"; }; f"
    # REF: https://hackernoon.com/moving-from-beginner-to-slightly-more-advanced-git-with-aliases-89e30a6accf4
    a = add
    b = branch
    c = commit --message
    ca = commit --all --message
    cl = clone
    co = checkout
    d = diff
    f = fetch
    i = init
    o = open # see: https://github.com/paulirish/git-open â™¥
    p = push
    pt = push --tags
    pu = pull
    s = status
    t = tag
[init]
    templatedir = ~/.git-templates
